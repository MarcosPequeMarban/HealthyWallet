<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TÍTULO -->
        <TextView
            android:id="@+id/tituloBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance General"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="20dp" />

        <!-- TARJETA: INGRESOS Y GASTOS -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtIngresosMes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingresos del mes: 0 €"
                    android:textColor="#4CAF50"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtGastosMes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gastos del mes: 0 €"
                    android:textColor="#F44336"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- TARJETA: TOP 3 CATEGORÍAS -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:padding="18dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top 3 Gastos"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/txtTop1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/txtTop2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="16sp"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/txtTop3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="16sp"
                    android:layout_marginTop="6dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- TARJETA GRÁFICO -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp"
            android:backgroundTint="#FFFFFF">

            <ImageView
                android:id="@+id/imgGrafico"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_placeholder_chart"
                android:scaleType="centerInside"
                android:contentDescription="Gráfico estadístico" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
